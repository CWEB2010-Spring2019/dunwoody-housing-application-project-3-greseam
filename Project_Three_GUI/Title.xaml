        <Button Content="Login" FontSize="20" HorizontalAlignment="Left" Margin="335,347,0,0" VerticalAlignment="Top" Width="138" Height="31" Background="Black" Foreground="White" Click="ButtonBase_OnClick"/>
        <Image HorizontalAlignment="Left" Height="169" Margin="138,37,0,0" VerticalAlignment="Top" Width="532" Source="image.png"/>
        <Label BorderThickness="0" HorizontalAlignment="Left" Height="46" Margin="288,186,0,0" Content="Housing Application" VerticalAlignment="Top" Width="257" FontSize="25" Foreground="LightGray"/>
